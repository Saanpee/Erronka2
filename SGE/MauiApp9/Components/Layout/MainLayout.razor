@inherits LayoutComponentBase

<div class="app-container">
    <header class="top-bar">
        <div class="header-content">
            <span class="brand">ElorMAUI</span>
            <span class="status-tag">Zentro kudeaketa</span>
        </div>
    </header>

    <main class="main-content">
        @Body
    </main>
</div>

<style>
    :root {
        --primary: #2563eb;
        --info: #0ea5e9;
        --warning: #f59e0b;
        --danger: #ef4444;
        --success: #10b981;
        --bg: #ffffff;
        --text: #1e293b;
        --border: #e2e8f0;
        --light-bg: #f8fafc;
    }

    body {
        margin: 0;
        padding: 0;
        font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
        background-color: var(--bg);
        color: var(--text);
    }

    .top-bar {
        border-bottom: 1px solid var(--border);
        background: white;
        padding: 15px 0;
    }

    .header-content {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .brand {
        font-weight: 800;
        font-size: 1.2rem;
        color: var(--primary);
    }

    .status-tag {
        font-size: 0.75rem;
        background: var(--light-bg);
        padding: 4px 12px;
        border-radius: 20px;
        color: #64748b;
    }

    .main-content {
        max-width: 1200px;
        margin: 0 auto;
        padding: 40px 20px;
    }

    h1, h2, h3 {
        margin-top: 0;
        font-weight: 700;
        letter-spacing: -0.5px;
    }

    input, select {
        width: 100%;
        padding: 12px;
        margin: 8px 0 20px 0;
        border: 1px solid var(--border);
        border-radius: 8px;
        background: var(--light-bg);
        font-size: 1rem;
        box-sizing: border-box;
    }

    input:focus, select:focus {
        outline: none;
        border-color: var(--primary);
        background: white;
        box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
    }

    button {
        cursor: pointer;
        font-weight: 600;
        border-radius: 8px;
        border: none;
        transition: all 0.2s;
        padding: 12px 24px;
        background: var(--primary);
        color: white;
    }

    button:hover {
        opacity: 0.9;
        transform: translateY(-1px);
    }

    button:active {
        transform: translateY(0);
        scale: 0.98;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 30px;
    }

    th {
        text-align: left;
        padding: 12px;
        border-bottom: 2px solid var(--border);
        color: #64748b;
        font-size: 0.85rem;
        text-transform: uppercase;
    }

    td {
        padding: 16px 12px;
        border-bottom: 1px solid var(--border);
        vertical-align: middle;
    }

    tr:hover {
        background-color: var(--light-bg);
    }

    .btn-group {
        display: flex;
        gap: 6px; 
        justify-content: center; 
    }

    .btn-sm {
        padding: 6px 12px;
        font-size: 0.75rem;
        width: auto;
        margin: 0;
    }

    .btn-info { background: var(--info); }
    .btn-warning { background: var(--warning); color: white; }
    .btn-danger { background: var(--danger); }
    .btn-success { background: var(--success); }

    .alert-info {
        background: #eff6ff;
        color: var(--primary);
        padding: 10px 20px;
        border-radius: 8px;
        display: inline-block;
        font-weight: 600;
        margin-bottom: 20px;
        font-size: 0.9rem;
    }

    #map {
        border-radius: 12px;
        border: 1px solid var(--border);
        overflow: hidden;
    }

</style>